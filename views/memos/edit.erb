<section>
  <form method="POST" action="/memos">
    <input type="hidden" name="id" value="<%= memo.id %>">
    <input type="text" name="title" placeholder="メモのタイトルを入力..." value="<%= memo.title %>">
    <textarea name="content" placeholder="メモの内容を入力..."><%= memo.content %></textarea>
    <button type="submit">保存</button>
  </form>
</section>
